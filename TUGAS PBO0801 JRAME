    public void reset(){
        
        //comboBox.setSelectedIndex(0);
        
    }
    
    public void fillTable(String Judul,String Pengarang,String Genre){
        DefaultTableModel model = (DefaultTableModel)Tabel_dataBuku.getModel();
        model.addRow(new Object[]{Judul,Pengarang,Genre});
       
    }
    public void cleartable(){
        
        DefaultTableModel model = (DefaultTableModel)Tabel_dataBuku.getModel();
        model.setRowCount(0);
        model.setColumnCount(0);
    }
    public Boolean scanningsearch(String text){
        Boolean back=false;
        for(int kolom=0;kolom<Tabel_dataBuku.getColumnCount();kolom++){
            for(int row=0;row<Tabel_dataBuku.getRowCount();row++){
                if(String.valueOf(Tabel_dataBuku.getValueAt(row, kolom)).contains(text)){
                    back = true;
                }
            }
        }
        return back;
    }
