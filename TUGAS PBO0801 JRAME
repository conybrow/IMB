    private void Search_ButtonActionPerformed(java.awt.event.ActionEvent evt) {                                              
        itungawal=itungklik;
        String text = Input_Search.getText();
        DefaultTableModel model = (DefaultTableModel)Tabel_dataBuku.getModel();
        TableRowSorter tr = new TableRowSorter(model);
        Tabel_dataBuku.setRowSorter(tr);
        // TODO add your handling code here:
        tr.setRowFilter(RowFilter.regexFilter(text));
        if(!text.equals("")){
            itungklik++;
        }
        itungakhir=itungklik;
    }                                             

