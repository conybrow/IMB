        // TODO add your handling code here:
    }                                            
    public Boolean scanningcb1(String item){
        int itemCount = cb1.getItemCount();
        Boolean back = false;
        for(int i=0;i<itemCount;i++){
            if((cb1.getItemAt(i).equals(item))){
                back = true;
            }
           
        }
        return back;
    }
