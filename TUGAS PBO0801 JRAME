    private void Tombol_MasukkanActionPerformed(java.awt.event.ActionEvent evt) {                                                
        String pesan;
        if((Penulis_Input.getText().equals("")||
                (Judul_Input.getText().equals(""))||
                (cb1.getSelectedItem().equals("Pilih Genre")))||
                ((Penulis_Input.getText().equals("")&&
                (Judul_Input.getText().equals(""))&&
                (cb1.getSelectedItem().equals("Pilih Genre"))))){
            pesan = "Data tidak boleh kosong";
            JOptionPane.showMessageDialog(null, pesan);
        }
        else{
            String judul = Judul_Input.getText();
            String Penulis = Penulis_Input.getText();
            String Genre = String.valueOf(cb1.getSelectedItem());
            if(scanningsearch(judul)&&scanningsearch(Penulis)&&scanningsearch(judul)){
                pesan = "Data sudah pernah diinput";
                JOptionPane.showMessageDialog(null, pesan);
            }
            else{
                fillTable(judul,Penulis,Genre);
            }  
        }
        // TODO add your handling code here:
    }                                               

    private void Delete_ButtonActionPerformed(java.awt.event.ActionEvent evt) {                                              
        Tabel_dataBuku.getSelectedRow();
        System.out.println("work");
        DefaultTableModel model = (DefaultTableModel) Tabel_dataBuku.getModel();
        System.out.println("work");
        int selectedRow = Tabel_dataBuku.getSelectedRow();
        System.out.println("total Row : "+Tabel_dataBuku.getRowCount());
        System.out.println("Row : "+selectedRow);
        
        String text;
        
        if (selectedRow != -1) {
            if(itungawal==itungakhir){
                System.out.println(" if work");
                text = String.valueOf(Tabel_dataBuku.getValueAt(selectedRow,0));
                int respon = JOptionPane.showConfirmDialog(this, "Hapus "+text,"Perhatian", JOptionPane.YES_NO_OPTION, JOptionPane.QUESTION_MESSAGE);
                if(respon == JOptionPane.YES_OPTION){
                    model.removeRow(selectedRow);
                    JOptionPane.showMessageDialog(null, text+" dihapus");
                }
                System.out.println(" if work");
                
            }
            else{
                
                int modelRow = Tabel_dataBuku.convertRowIndexToModel(selectedRow);
                text = String.valueOf(Tabel_dataBuku.getValueAt(selectedRow,0));
                
                int respon = JOptionPane.showConfirmDialog(this, "Hapus "+text,"Perhatian", JOptionPane.YES_NO_OPTION, JOptionPane.QUESTION_MESSAGE);
                if(respon == JOptionPane.YES_OPTION){
                    model.removeRow(modelRow);
                    JOptionPane.showMessageDialog(null, text+" dihapus");
                }
                
                
            }
        } else {
            JOptionPane.showMessageDialog(null, "Pilih baris yang ingin dihapus.");
        }
        // TODO add your handling code here:
        
        
    }                                             

