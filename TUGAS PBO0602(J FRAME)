    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        //Tombol Submit a.k.a OK
        String pesan;
    if((!cekchar(jTextField4.getText())
            &&!cekchar(jTextField2.getText())
            &&!cekchar(jTextField5.getText())
            )
            ||(jTextField4.getText().equals(null))
            ||(jTextField5.getText().equals(null))
            ||(jTextField2.getText().equals(null)))
     {
        int indomie;
        if(jTextField4.getText().equals("")){
        indomie = 0;
        }else{
        indomie = parseint(jTextField4.getText())*2500;
        }
        int Kornet;
        if(jTextField2.getText().equals("")){
        Kornet = 0;
        }else{
        Kornet = parseint(jTextField2.getText())*1300;
        }
        int Telur ;
        if(jTextField5.getText().equals("")){
        Telur = 0;
        }else{
        Telur = parseint(jTextField5.getText())*900;
        }
        
        
            int subtotal;
            if(indomie!=0||Telur!=0||Kornet!=0){
                int total =indomie+Telur+Kornet;
                int temptotal1=total;
                int temptotal2=total;
                int temptotal3;
                if(total%1000!=0){
                    temptotal1=temptotal1/1000;
                    temptotal2=temptotal2-(temptotal1*1000);
                    temptotal3=1000-temptotal2;
                    subtotal=total+temptotal3;
                    pesan = "Total Pembelian: "+total+"\nJumlah Pembulatan: "
                            +temptotal3+"\nTotal Bayar: "+subtotal;
                }
                else{
                    pesan ="Total Pembelian: "+total+"\nTotal Bayar: "+total;
                }

            } else{
                pesan = "Terjadi kesalahan";
            }   
    
    }
    else{
        pesan = "Terjadi kesalahan";
    }
    JOptionPane.showMessageDialog(null, pesan);
    }                                        

    
