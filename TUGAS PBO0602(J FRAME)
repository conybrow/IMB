    public int parseint(String text){
        int angka = Integer.parseInt(text);
        return(angka);
    }
    
    public Boolean cekchar(String text){
        String kata = text;
        
        char[] karakter=kata.toCharArray();
        Boolean q = false;
        for(char c : karakter){
            if(Character.isLetter(c)){
                q=true;
            }
        }
        return(q);
    }
